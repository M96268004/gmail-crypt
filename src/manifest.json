{
  "name":"Mymail-Crypt for Gmail™",
  "version":"38",
  "manifest_version":2,
  "description":"Extension implementing GPG into Webmail (Gmail™) using the OpenPGP.js library. This project is no way affiliated with Google™.",
  "icons": {
    "128": "images/mymail-crypt.128.png"
  },
  "permissions":[
    "webRequest",
    "webRequestBlocking",
    "https://mail.google.com/*",
    "http://mail.google.com/*",
    "https://google.com/*",
    "http://google.com/*"
  ],
  "background": {
    "scripts":["js/background.bundle.js"]
  },
  "content_scripts": [{
    "matches": [
      "https://mail.google.com/*",
      "http://mail.google.com/*"
    ],
    "css": ["css/mymail-crypt.css"],
    "js": [
      "js/content-script.bundle.js"],
    "run_at":"document_idle",
    "all_frames":true
  }],
  "homepage_url": "http://prometheusx.net",
  "options_page": "html/mymail-crypt-options.html",
  "web_accessible_resources": [
    "images/ic_lock_black_48px.svg",
    "images/ic_lock_open_black_24px.svg",
    "images/ic_create_black_48px.svg",
    "images/ic_delete_black_48px.svg"
  ]
}
